  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DhyanaChina/todo-live/issues"
  },
  "engines": {
    "node": ">= 6.10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "homepage": "https://github.com/DhyanaChina/todo-live#readme",
  "devDependencies": {
    "@commitlint/config-angular": "^6.0.2",
    "commitizen": "^2.9.6",
